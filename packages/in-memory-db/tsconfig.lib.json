{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "../../dist/out-tsc",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/mocks.ts", "jest.config.ts"],
  "include": ["**/*.ts", "**/*.json"]
}
