{
  "$schema": "http://json-schema.org/schema",
  "id": "new-addon",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Addon name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    }
  },
  "required": ["name"]
}
